@inherits TablerComponentBase
@namespace BlazorTabler

@code
{
    [Parameter] public RenderFragment? Content { get; set; }
    [CascadingParameter] internal Carousel Parent { get; set; } = default!;
    [Parameter] public bool IsActive { get; set; }
    [Parameter] public required string ImageUrl { get; set; }
    [Parameter] public string? ImageAlt { get; set; }
    [Parameter] public string? CaptionTitle { get; set; }
    [Parameter] public string? CaptionNote { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Parent.AddItem(this);
    }
    
    public string Classes =>
        string.Join(" ",
                TablerClasses.CarouselItem,
                IsActive ? "active" : "",
                CssClass
            )
            .Trim();
}