@inherits TablerComponentBase
@namespace BlazorTabler

<svg xmlns="http://www.w3.org/2000/svg" class="@Classes" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
    @((MarkupString)Icon.GetDescription())
</svg>

@code {
    [Parameter] public required TablerSvgIcons Icon { get; set; }

    private string Classes =>
        string.Join(" ",
                TablerClasses.Icon,
                Class
            )
            .Trim();

}